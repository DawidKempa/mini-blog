<% content_for :title, "Użytkownicy" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-people me-2"></i> Użytkownicy</h1>
  <%= link_to new_admin_user_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle me-2"></i> Dodaj użytkownika
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Rola</th>
      <th>Data rejestracji</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= l user.created_at, format: :short %></td>
        <td>
          <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-primary" do %>
            <i class="bi bi-eye"></i>
          <% end %>
          <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          <%= button_to admin_user_path(user), 
              method: :delete,
              form: { data: { turbo_confirm: 'Czy na pewno chcesz usunąć tego użytkownika?' } },
              class: "btn btn-sm btn-outline-danger" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless defined?(@skip_pagination) && @skip_pagination %>
  <%= paginate @users %>
<% end %>