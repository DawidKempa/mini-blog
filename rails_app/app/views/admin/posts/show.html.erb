<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @post.title %></h1>

      <div class="card-text post-content">
        <%= @post.body %>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <h3>Komentarze (<%= @post.comments.count %>)</h3>
    
    <% if user_signed_in? %>
      <%= form_with(model: [:admin, @post, @comment], local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :content, "Dodaj komentarz", class: "form-label" %>
          <%= f.text_area :content, class: "form-control", rows: 3, required: true %>
        </div>
        <%= f.submit "Wyślij", class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <div class="alert alert-info">
        <%= link_to "Zaloguj się", new_user_session_path %> aby dodać komentarz.
      </div>
    <% end %>
    

    <div class="mt-4">
      <% @post.comments.includes(:user).each do |comment| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="card-subtitle mb-2 text-muted">
                <% if comment.user.admin? %>
                  <span class="badge bg-danger">Admin</span>
                <% end %>
                <%= comment.user.email %> • 
                <%= time_ago_in_words(comment.created_at) %> temu
              </h6>
                <% if current_user && (current_user.admin? || comment.user == current_user) %>
                  <%= link_to 'Edytuj', edit_admin_comment_path(comment), class: "btn btn-sm btn-outline-secondary me-2" %>
                  <%= button_to 'Usuń', admin_comment_path(comment), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      data: { confirm: 'Czy na pewno chcesz usunąć ten komentarz?' } %>
                <% end %>
            </div>
            <p class="card-text mt-2"><%= comment.content %></p>
          </div>
          
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .post-content img {
    max-width: 100%;
    height: auto;
    margin: 1rem 0;
    border-radius: 0.25rem;
  }
</style>