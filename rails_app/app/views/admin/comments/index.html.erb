<% content_for :title, "Komentarze" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-chat-left-text me-2"></i> Zarządzanie komentarzami</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Treść</th>
      <th>Post</th>
      <th>Autor</th>
      <th>Data</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= truncate(comment.content, length: 50) %></td>
        <td>
          <%= link_to "Post ##{comment.post.id}", admin_post_path(comment.post) %>
        </td>
        <td><%= comment.user.email %></td>
        <td><%= l comment.created_at, format: :short %></td>
        <td>
          <%= link_to edit_admin_comment_path(comment), class: "btn btn-sm btn-warning me-1" do %>
            <i class="bi bi-pencil"></i>
          <% end %>

          <%= button_to admin_comment_path(comment),
              method: :delete,
              class: "btn btn-sm btn-danger",
              form: { data: { turbo_confirm: 'Na pewno usunąć?' } } do %>
            <i class="bi bi-trash"></i>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless defined?(@skip_pagination) && @skip_pagination %>
  <%= paginate @comments %>
<% end %>