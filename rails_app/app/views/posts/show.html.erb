<p style="color: green"><%= notice %></p>

<%= render @post %>

<div class="container">
  <%= @post.body %>

</div>

<% if user_signed_in? %>
  <%= form_with(model: [@post, @post.comments.build], local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :content, "Dodaj komentarz", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 3, required: true %>
    </div>
    <%= f.submit "Wyślij", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <div class="alert alert-info">
    <%= link_to "Zaloguj się", new_user_session_path %> aby dodać komentarz.
  </div>
<% end %>

<div class="mt-4">
      <% @post.comments.includes(:user).each do |comment| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="card-subtitle mb-2 text-muted">
                <% if comment.user.admin? %>
                  <span class="badge bg-danger">Admin</span>
                <% end %>
                <%= comment.user.email %> • 
                <%= time_ago_in_words(comment.created_at) %> temu
              </h6>
                <% if current_user && (current_user.admin? || comment.user == current_user) %>
                  <div class="btn-group" role="group">
                    <%= link_to 'Edytuj', edit_post_comment_path(@post, comment), 
                                class: "btn btn-sm btn-outline-secondary" %>

                    <%= button_to 'Usuń', post_comment_path(@post, comment), 
                        method: :delete, 
                        class: "btn btn-sm btn-outline-danger",
                        data: { confirm: 'Czy na pewno chcesz usunąć ten komentarz?' } %>
                  </div>
                <% end %>
            </div>
            <p class="card-text mt-2"><%= comment.content %></p>
          </div>
        </div>
      <% end %>
    </div>

<div>
  <%= link_to "Back to posts", posts_path %>

</div>
